<!DOCTYPE html>
<html>
  <head>
    <title>BookReview</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section>
      <section class="navbar-header">
        <p class ="navbar-title">Welcome to Book Review</p>
        <p class="navbar-subtitle">Search for a Book</p>
      </section>
      <section class="navbar-search-form">
        <%= form_tag(search_path, method: "get") do %>
          <%= text_field_tag(:title) %>
          <%= submit_tag('Find Book', class: "button") %>
        <% end %>
      </section>
    </section>
    <%= yield %>
  </body>
</html>
